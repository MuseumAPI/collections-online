@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Collections Online Website</title>
        <style>
            body {
                 font-family: sans-serif;margin: 0;
            }
            .facets {
                float: left;
                width: 20%;
                background: #ccc;
                
            }
            .results {
                float: left;
                width: 80%;
                margin: 0;
                padding: 0;
                list-style: none;
                border-top: 1px solid #000;
                background: #ddd;
                
            }
            .results li {
                 border-bottom: 1px solid #999;padding-bottom: 10px;
            }
            .stats {
                 background: #aaa;
            }
            form {
                background: #ddd;
            }
            .active-facets {
                background: #eee;
                padding: 5px;
            }
            .active-facets a {
                border: 1px solid #000;
                padding: 5px;
                display: inline-block;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        @RenderBody()   
    </body>
</html>