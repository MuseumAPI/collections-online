@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Collections Online Website</title>
        <style>
            body {
                 font-family: sans-serif;margin: 0;
            }
            .facets {
                float: left;
                width: 20%;
                background: #ccc;
                
            }
            .results {
                float: left;
                width: 80%;
                margin: 0;
                padding: 0;
                list-style: none;
                background: #ddd;                
            }
            .results h4 {
                margin: 0;
            }
            .results li {
                padding: 10px 0;
                border: 1px solid #000;
            }
            .results li.item {
                background: #b0e0e6;
            }
            .results li.species {
                background: #3cb371;
            }
            .results li.specimen {
                background: #f4a460;
            }
            .results li.story {
                background: #a52a2a;
            }   
            .stats {
                 background: #aaa;
            }
            form {
                background: #ddd;
            }
            .active-facets {
                background: #eee;
                padding: 5px;
            }
            .active-facets a {
                border: 1px solid #000;
                padding: 5px;
                display: inline-block;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        @RenderBody()   
    </body>
</html>