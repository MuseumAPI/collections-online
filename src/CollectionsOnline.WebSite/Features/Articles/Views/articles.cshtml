@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<CollectionsOnline.WebSite.Features.Articles.ArticleViewModel>
@{
    Layout = "layout.cshtml";
}
<div class="container no-nav">
    <div class="row">
        <div class="col-md-12">
            <div class="record">
                <div class="title">
                    <h1>
                        @Model.Article.Title<br />
                        @foreach (var type in @Model.Article.Types)
                        {
                            <a href="/search?articletypes=@HttpUtility.UrlEncode(type.ToLower())">@type</a><br />
                        }
                    </h1>
                </div>
                <div class="images">
                    @for (int i = 0; i < Model.Article.Media.Count; i++)
                    {
                        if (i == 0)
                        {
                            <img src="@Model.ImageMedia[i].Medium.Uri" width="@Model.ImageMedia[i].Medium.Width" height="@Model.ImageMedia[i].Medium.Height" class="img-rounded center-block" />
                        }
                        else
                        {
                            <img src="@Model.ImageMedia[i].Thumbnail.Uri" width="100" height="100" class="img-thumbnail" />
                        }
                    }
                </div>
                <div class="main-content">
                    @if (!string.IsNullOrWhiteSpace(Model.Article.ContentSummary))
                    {
                        <h4>Summary</h4>
                        @Html.Raw(Model.Article.ContentSummary)
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Article.Content))
                    {
                        @Html.Raw(Model.Article.Content)
                    }
                </div>
                @if (Model.Article.ChildArticleIds.Any() || !string.IsNullOrWhiteSpace(Model.Article.ParentArticleId))
                {
                    <div class="related-articles">
                        <h4>Related Articles</h4>
                        @if (!string.IsNullOrWhiteSpace(Model.Article.ParentArticleId))
                        {
                            <a class="label label-info" href="/@Model.Article.ParentArticleId">@Model.Article.ParentArticleId</a>
                        }
                        @foreach (var childArticleId in @Model.Article.ChildArticleIds)
                        {
                            <a class="label label-info" href="/@childArticleId">@childArticleId</a>
                        }
                    </div>
                }
                @if (Model.Article.RelatedArticleIds.Any())
                {
                    <div class="related-articles">
                        <h4>Associated Articles</h4>
                        @foreach (var relatedArticleId in Model.Article.RelatedArticleIds)
                        {
                            <a class="label label-info" href="/@relatedArticleId">@relatedArticleId</a>
                        }
                    </div>
                }
                @if (Model.Article.Authors.Any())
                {
                    <div class="authors">Authors</div>
                    @foreach (var author in @Model.Article.Authors)
                    {
                        <div>
                            <span>@author.Name</span>
                            <span>@author.Biography</span>
                        </div>
                    }
                }
                @if (Model.Article.RelatedItemIds.Any() || Model.Article.RelatedSpecimenIds.Any())
                {
                    <div class="related-items">
                        <h4>Related items/specimens</h4>
                        @foreach (var relatedSpecimenId in Model.Article.RelatedSpecimenIds)
                        {
                            <a class="label label-info" href="/@relatedSpecimenId">@relatedSpecimenId</a>
                        }
                        @foreach (var relatedItemId in Model.Article.RelatedItemIds)
                        {
                            <a class="label label-info" href="/@relatedItemId">@relatedItemId</a>
                        }
                        <h4><a href="/search?article=@Model.Article.Id">See all items</a></h4>
                    </div>
                }
                @if (Model.Article.Keywords.Any())
                {
                    <div class="keywords">
                        <h4>Keywords</h4>
                        @foreach (var keyword in @Model.Article.Keywords)
                        {
                            <a class="label label-warning" href="/search?keyword=@HttpUtility.UrlEncode(keyword)">@keyword</a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>