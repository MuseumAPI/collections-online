@using System.Configuration
@using CollectionsOnline.WebSite.Models
@{
    var metadata = (MetadataViewModel)ViewBag.metadata ?? new MetadataViewModel();
}
<title>@(metadata.Title)</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
@if(!string.IsNullOrWhiteSpace(metadata.CanonicalUri))
{ 
<link rel="canonical" href="@metadata.CanonicalUri">
}
<meta property="fb:app_id" content="@ConfigurationManager.AppSettings["FacebookAppId"]" />
@if (!string.IsNullOrWhiteSpace(metadata.Description))
{
<meta property="description" content="@metadata.Description" />
<meta property="og:description" content="@metadata.Description" />
<meta property="twitter:description" content="@metadata.Description" />
}
<meta property="og:title" content="@metadata.Title" />
<meta property="og:site_name" content="Museum Victoria Collections"/>
<meta property="twitter:title" content="@metadata.Title" />
<meta property="twitter:site" content="@("@museumvictoria")">
@foreach (var metaProperty in metadata.MetaProperties)
{
<meta property="@metaProperty.Key" content="@metaProperty.Value" />
}